{
    "titre": "Erreur 404",
    "auteur": "Alyson Gagnon",
    "from": "CÉGEP DE RIMOUSKI",
    "poem": [
        "",
        "Glace noire sournoise,",
        "Surprend toujours.",
        "Mirage parfait,",
        "Qui coûte la vie.",
        "Qui l’eût cru,",
        "Que la glace noire la plus dangereuse",
        "Se trouvait entre nos mains ?",
        "Notre reflet montre l’importance",
        "De cet objet auquel on tient.",
        "Écrans,",
        "Dictez-moi comment agir,",
        "Aliénez-moi.",
        "Je préfère vous suivre",
        "Que d’être moi.",
        " Mais quand la glace se brise,",
        "Elle ne vaut plus rien.",
        "Mosaïque lugubre,",
        "Dépourvoit de sens l’écran.",
        "Au lieu de vivre",
        "Pour vrai.",
        "Terrorisés par l’idée que la glace fragmentée",
        "Laisse un vide en nous.",
        "On recolle les morceaux.",
        "La glace sournoise",
        "Surprend encore."
    ]
}